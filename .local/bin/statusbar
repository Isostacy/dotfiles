#!/bin/bash

player_status=$(playerctl status 2> /dev/null)
	if [ "$player_status" = "Playing" ]; then
		music="ïŒ $(playerctl metadata title) - $(playerctl metadata artist)"
	elif [ "$player_status" = "Paused" ]; then
		music="ï‹ $(playerctl metadata title) - $(playerctl metadata artist)"
	else
